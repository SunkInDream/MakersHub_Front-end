/* pages/submit/submit.wxss */
.container {/*页面整体设置*/
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:flex-start;
  background-color: #222831;
  position: relative;
  min-height: 100vh;
  padding: 0;
  gap: 50rpx;
}

/*用户界面*/
.form-container {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 640rpx;
  height: auto;
  border-radius: 30rpx;
  background-color: #ffffff;
  padding: 30rpx;
  gap: 20rpx;
}

.form-header {
  font-size: 36rpx;
  color: #00ADB5;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  color: #00ADB5;
  font-size: 28rpx;
  /* margin-bottom: 20rpx; */
  font-weight: bold;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  height: 80rpx;
  background: #F5F5F5;
  border: 2rpx solid #D8E0F0;
  border-radius: 24.5rpx;
  padding: 20rpx 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.form-textarea {
  width: 100%;
  line-height: 1.4;
  min-height: 200rpx;
  max-height: 300rpx;
  height: auto;  
  resize: vertical;
  background: #F5F5F5;
  border: 2rpx solid #D8E0F0;
  border-radius: 24.5rpx;
  padding: 20rpx 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.submit-btn {/*提交按钮*/
  display: flex;
  background: #00ADB5;
  color: #fff;
  border-radius: 40rpx;
  width: 200rpx;
  height: 80rpx;
  font-size: 32rpx;
  margin-top:30rpx;
  align-items: center;
  justify-content:center;
  align-self: center;
}

.submit-btn:active {
  transform: scale(0.98);
  filter:brightness(0.95);
}

.bottom-image {/*背景图片的小猫*/
  width: 440.53rpx;
  height: 174.4rpx;
  position: absolute;    
  bottom: 0;                   
  left: 50%;                  
  transform: translateX(-50%);
  background-size: contain; /* 使图标自适应容器大小 */
  background-repeat: no-repeat; /* 防止图标重复 */
  background-position: center; /* 图标居中 */
  z-index: 99;
}

.focused{
  border-color: #00ADB5;
  box-shadow: 0 0 5px rgba(0, 173, 181, 0.5);
}