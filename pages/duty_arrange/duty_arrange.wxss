/* pages/curriculum/curriculum.wxss */
.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  overflow-x:hidden;	
}

.grid-box {
  width: 100%;
  flex: 1;
}

.week{
	width: 100%;
	height:70rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: small;
}
.cur_top{
	width: 100%;
	height:100rpx;
	display: flex;
	flex-direction: row;
}
.cur_left{
	width: 100rpx;
	background-color: #00ADB5;
}
.cur_top .day{
	width: 100rpx;
  font-size: 30rpx;
  background-color: #00ADB5;
  color: white;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.day .precise{
	font-size: smaller;
	color: gray;
  display: flex;
  width: 12.5%;
	justify-content: center;
	align-items: center;
}
.cur_mid{
	width: 100%;
	height:225rpx;
	display: flex;
	flex-direction: row;
}
.cur_left2{
	width: 12.5%;
	height:100%;
	background-color: #FFE89E;
}
.piece{
	width: 12.5%;
	height:225rpx;
	padding: 10rpx 10rpx 10rpx 10rpx;
	overflow: visible;
	text-align:justify;
	text-align-last:start;
	letter-spacing: 0ch;
	font-weight: bold;
	font-size:22rpx;
}
.piece .title{
	font-weight: bold;
	font-size:27rpx;
}
.piece .content{
	font-size:25rpx;
}