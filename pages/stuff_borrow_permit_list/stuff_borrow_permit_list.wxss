/* pages/object_borrow_list/object_borrow_list.wxss */

page {
  background-color: #222831;
  overflow: hidden;
}

.container {
  position: relative;
  overflow-x: hidden;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
}

.tab {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 150rpx;
  margin-top: 10rpx;
  margin-bottom: 25rpx;
}

.tab text {
  font-size: 32rpx;
  color: #FFFFFF;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.active {
  position: relative;
  border: none;
  color: #00ADB5 !important;
  border-bottom: 6rpx solid #00ADB5;
}

.list-container {
  overflow-x: hidden;
  flex: 1;
  height: auto;
  touch-action: none;
}

swiper {
  flex: 1;
  height: 100%;
  width: 100vw;
}

swiper-item {
  min-height: 80%;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  height: auto;
  align-items: center;
  justify-content: flex-start;
  gap: 30rpx;
  overflow-y: auto;
}

.item-container {
  display: flex;
  align-items: center;
  width: 619rpx;
  height: 183rpx;
  justify-content: space-between; /* 让按钮和内容对齐分布 */
  background-color: #ffffff;
  color: #393E46;
  border-radius: 35rpx;
  gap: 20rpx;
  margin-bottom: 40rpx;

  padding: 0 30rpx; /* ✅ 添加左右内边距，让内容整体右移 */
  box-sizing: border-box;
}

.item-details {
  height: 181rpx;
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 15rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  color: #393E46;
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
}

.label {
  font-size: 24rpx;
  color: #888;
}

.value {
  font-size: 24rpx;
  color: #333;
  display: inline-block;
  white-space: nowrap;
}

.tag {
  display: inline-block;
  white-space: nowrap;
  background-color: #ffeaa7; /* 默认黄色 */
  color: #333;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 24rpx;
}

.tag-team {
  background-color: #ff6b6b; /* 团队标签为红色背景 */
  color: #fff;
}


.time-and-tag {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 28rpx;
  flex-wrap: nowrap;
}

.detail-btn {
  width: 160rpx;
  height: 65rpx;
  background: #00BAAD;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 20rpx;
}

.detail-btn:active {
  filter: brightness(0.95);
}

.bottom-image {
  width: 440rpx;
  height: 174rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: -99;
}
swiper-item {
  min-height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  gap: 30rpx;
  overflow-y: auto;
  padding-bottom: 200rpx; /* 预留给按钮区域，避免被 bottom-image 遮挡 */
}
