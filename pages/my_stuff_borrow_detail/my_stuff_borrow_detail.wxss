.container {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.scroll-area {
  position: absolute;
  top: 170rpx;  
  bottom: 0;
  left: 0;
  right: 0;
  overflow-y: scroll;
}


.detail-container {
  padding: 30rpx 30rpx 0 30rpx;
  width: 100%;
}

/* 右上角状态标签 */
.box {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 160rpx;
  height: 50rpx;
  border-radius: 0rpx 0rpx 0rpx 35rpx;
  background: rgba(0, 173, 181, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 40rpx;
}

.boxtext {
  font-size: 30rpx;
  font-weight: 400;
  line-height: 45rpx;
  color: rgba(255, 255, 255, 1);
}

/* 内容区块通用样式 */
.section {
  margin-bottom: 50rpx;
}

/* 标题带竖线效果 */
.sub-title {
  position: relative;
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #222831;
  font-weight: 400;
  line-height: 1.4;
  border-left: 8rpx solid #00adb5;
}

/* 信息内容样式 */
.info {
  padding: 20rpx 0rpx 0rpx 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #444;
  line-height: 1.6;
  position: relative;
}

/* 复制图标 */
.copy-icon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  margin-left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

