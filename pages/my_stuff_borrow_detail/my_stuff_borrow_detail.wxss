/* 按钮样式 */
.action-btn {
  height: 80rpx;
  width: 250rpx;
  font-size: 32rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  color: #FFFFFF;
}

/* 取消申请按钮 */
.cancel-btn {
  background-color: #E33C64;
}

.cancel-btn::after {
  border: none;
}

/* 修改申请按钮 */
.modify-btn {
  background-color: #00ADB5;
}

.modify-btn::after {
  border: none;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 按钮容器 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 120rpx;
  padding: 0 20rpx;
  align-self: center;
  margin-top: 50rpx;
  margin-bottom: 200rpx; /* 避免被底部图片遮住 */
}
.bottom-placeholder {
  height: 100rpx;  /* 根据需要的空白高度调整，例如 60rpx、80rpx、100rpx */
}
/* 审核反馈容器 */
.feedback-container {
  background-color: rgba(227, 60, 100, 0.1); /* #E33C64 变浅 */
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  text-align: center;
  width: 85vw;
  align-self: center;
}

.feedback-title {
  font-size: 32rpx;
  color: #E33C64;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.feedback-content {
  font-size: 28rpx;
  color: #E33C64;
  line-height: 1.6;
  word-wrap: break-word;
}
