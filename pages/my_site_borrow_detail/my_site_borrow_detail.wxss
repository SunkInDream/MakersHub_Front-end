/* pages/my_site_borrow_detail/my_site_borrow_detail.wxss */
/* container布局 */
.container {
  padding: 0;
  position: relative;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  overflow-y: auto;
  height: 100vh;
}

.detail-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  align-items: flex-start;
  padding: 30rpx 30rpx 0 30rpx;
  justify-content: flex-start;
  width: 100%;
  gap: 15rpx;
}

/* 右上角状态标签 */
.box {
  position: absolute;
  top: 0rpx; 
  right: 0rpx;
  width: 160rpx;
  height: 50rpx;
  border-radius: 0rpx 0rpx 0rpx 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.boxtext {
  font-size: 30rpx;
  font-weight: 400;
  line-height: 45rpx;
  color: rgba(255, 255, 255, 1);
}

/* 内容区块通用样式 */
.section {
  margin: 0 0 50rpx 0;
}

/* 标题带竖线效果 */
.sub-title {
  position: relative;
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #222831;
  font-weight: 400;
  line-height: 1.4;
  border-left: 8rpx solid #00adb5
}


/* 信息内容样式 */
.info {
  padding: 20rpx 0rpx 0rpx 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #444;
  line-height: 1.6;
  position: relative;
}

/* 复制图标 */
.copy-icon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  margin-left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 底部装饰图 */
.bottom-image {
  margin-top: 40rpx;
  width: 440rpx;
  height: 174rpx;
  position: relative;
  align-self: center;
  bottom: 0rpx;
}

/* 已打回状态专用样式 */
.rejected-section {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 审核反馈容器 */
.feedback-container {
  background-color: rgba(227, 60, 100, 0.1); /* #E33C64 变浅 */
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  text-align: center;
  width: 85vw;
  align-self: center;
}

.feedback-title {
  font-size: 32rpx;
  color: #E33C64;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.feedback-content {
  font-size: 28rpx;
  color: #E33C64;
  line-height: 1.6;
  word-wrap: break-word;
}

/* 归还提示容器 */
.hint-container {
  background-color: rgba(0, 173, 181, 0.1); /* #E33C64 变浅 */
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  text-align: center;
  width: 85vw;
  align-self: center;
}

.hint-title {
  font-size: 32rpx;
  color: #00adb5;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.hint-content {
  font-size: 28rpx;
  color: #00adb5;
  line-height: 1.6;
  word-wrap: break-word;
}

/* 操作按钮容器 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 120rpx;
  padding: 0 20rpx;
  align-self: center;
}

.action-btn {
  /* flex: 1; */
  height: 80rpx;
  width: 250rpx;
  font-size: 32rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  color: #FFFFFF;
}

/* 取消申请按钮 */
.cancel-btn {
  background-color: #E33C64;
}

.cancel-btn::after {
  border: none;
}

/* 修改申请按钮 */
.modify-btn {
  background-color: #00ADB5;
}

.modify-btn::after {
  border: none;
}

/* 按钮点击效果 */
.action-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}