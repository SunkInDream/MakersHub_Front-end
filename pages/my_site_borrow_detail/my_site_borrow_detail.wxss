/* pages/personal_site_borrow_detail/personal_site_borrow_detail.wxss */
/* container布局 */
.container {
  padding: 0;
  position: relative;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100vh;
}

.detail-container {
  flex: 1;
  align-items: flex-start;
  padding: 30rpx 30rpx 0 30rpx;
  justify-content: flex-start;
  width: 100%;
}

/* 右上角状态标签 */
.box {
  position: absolute;
  top: 0rpx; 
  right: 0rpx;
  width: 160rpx;
  height: 50rpx;
  border-radius: 0rpx 0rpx 0rpx 35rpx;
  background: rgba(0, 173, 181, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9;
}
.boxtext {
  font-size: 30rpx;
  font-weight: 400;
  line-height: 45rpx;
  color: rgba(255, 255, 255, 1);
}

/* 内容区块通用样式 */
.section {
  margin: 0 0 50rpx 0;
}

/* 标题带竖线效果 */
.sub-title {
  position: relative;
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #222831;
  font-weight: 400;
  line-height: 1.4;
  border-left: 8rpx solid #00adb5
}


/* 信息内容样式 */
.info {
  padding: 20rpx 0rpx 0rpx 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #444;
  line-height: 1.6;
  position: relative;
}

/* 复制图标 */
.copy-icon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  margin-left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 底部装饰图 */
.bottom-image {
  width: 440.53rpx;
  height: 174.4rpx;
  position: relative;    
  bottom: 0rpx;       
  align-self: center;
}
